 <div class="container">
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>Venue:</strong>
  <%= @event.venue.name %>
</p>

<p>
  <strong>Performer:</strong>
  <%= @event.performer.name %>
</p>

<table class="table table-striped table-hover">
<thead><strong>Guests:</strong></thead>
<tbody>
 <% @guests.each do |eventguest| %>
      <tr>
        <td><strong><%= eventguest.user.name %></strong> +<%= eventguest.extras %> - <%= eventguest.type.name %> - <strong>Notes:</strong> <%= eventguest.notes %></td>
      </tr>
      <% end %>
      </tbody>
</table>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
</div>
