<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :date %>
    <%= f.association :venue %>
    <%= f.association :performer %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
