<%= simple_form_for(@guest) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :name %>
  	<%= f.input :email %>
  	<%= f.input :phone %>
  	<%= f.input :addons %>
    <%= f.association :list %>
    <%= f.association :type %>
    <%= f.input :comments %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
