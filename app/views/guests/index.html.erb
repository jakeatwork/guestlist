<div class="container">
<h1>Guests</h1>


<%= form_tag guests_path, method: :get do %>
  <p>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Source</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.provider %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<br>
<br>
<br>
<br>
<br>
<br>
<br>
<br><br>
<br>
<br>
<br><br>
<br>
<br>
<br><br>
<br>
<br>
<br>


<div class="table-responsive">
<table class="table table-striped table-bordered table-condensed table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>+1s</th>

      <th colspan="1">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @guests.each do |guest| %>
      <tr>
        <td><%= guest.name %><br>
            <strong>Note:</strong> <%= guest.comments %><br>
        </td>
        <td>+<%= guest.addons %></td>


        <td><%= link_to 'Show', guest %><br>
          <%= link_to 'Edit', edit_guest_path(guest) %><br>
          <%= link_to 'Destroy', guest, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<% if can? :manage, Guest %>
<%= link_to 'New Guest', new_guest_path %>
<% end %>
</div>