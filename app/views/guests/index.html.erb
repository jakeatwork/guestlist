<div class="container">
<h1>Guests</h1>
<div class="table-responsive">
<table class="table table-striped table-bordered table-condensed table-hover">
  <thead>
    <tr>
      <th>Name / Email / Phone</th>
      <th>Addons</th>
      <th>Type</th>
      <th>List</th>
      <th>Comments</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @guests.each do |guest| %>
      <tr>
        <td><%= guest.name %> / <%= guest.email %> / <%= guest.phone %></td>
        <td>+<%= guest.addons %></td>
        <td><%= guest.type_id %>-
        <td><%= guest.list_id %></td>
        <td><%= guest.comments %></td>
        <td><%= link_to 'Show', guest %></td>
        <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
        <td><%= link_to 'Destroy', guest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<% if can? :manage, Guest %>
<%= link_to 'New Guest', new_guest_path %>
<% end %>
</div>