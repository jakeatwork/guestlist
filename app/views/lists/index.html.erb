<div class="container">
<h1>Lists</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>List Name</th>
      <th colspan="4">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        
        <% if can? :manage, Guest %>
        <td><!-- THIS IS FOR TOUR MANAGERS ONLY -->
        <div class="btn-group">
          <%= button_to "Add Guests", new_guest_path, :class => "btn btn-xs btn-primary", :method => :get %>
          </div>
        </td>
        <% end %>

        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :manage, List %>
  <div class="btn-group">
    <%= button_to "New List", new_list_path, :class => "btn btn-default btn-xs", :method => :get %>
  </div>
<% end %>
</div>
