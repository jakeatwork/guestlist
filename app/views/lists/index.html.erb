<div class="container">
<h1>Lists</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>List Name</th>
      <th>Venue</th>
      <th>Event</th>
      <th>Performer</th>
      <th colspan="4">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td><%= list.venue.name %></td>
        <td><%= list.event.name %></td>
        <td><%= list.performer.name %></td>
        <td><!-- THIS IS FOR TOUR MANAGERS ONLY -->
        <%= link_to 'Add Guests to List', new_guest_path %></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path %>

</div>
